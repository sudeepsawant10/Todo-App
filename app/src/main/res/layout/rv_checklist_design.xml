<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llCheckListEdit"
        android:clickable="true"
        android:focusable="true"
        android:longClickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginVertical="3dp"
        android:padding="@dimen/dimen_4dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tvTopicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_2dp"
                android:text="@string/lecture_at_sith"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvCheckListTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTopicName"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:padding="@dimen/dimen_2dp"
                android:text="@string/created_at_22_09_2021"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|end">

            <ImageView
                android:id="@+id/ivEditCheckList"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/img" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:background="@color/grey"/>


</LinearLayout>